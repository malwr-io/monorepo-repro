{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "outDir": ".tmp/code",
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/e2e/**/*.e2e-spec.ts",
    "test/e2e/tools/*.ts",
    "typings/",
    "../../typings/"
  ],
  "exclude": [
    "dist",
    "config",
    ".tmp"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
